  
  <div class="container">
    <h2 class="title-lg mb">Вопрос</h2>
    <p class="mb-sm"><%= @question.body %></p>
    <p>user_id: <b><%= @question.user_id %></b></p>

    <div class="mt">
      <% unless @question.hidden? %>
        <%= button_to fa_icon('eye-slash'), hide_question_path(@question), method: :put, 
      title: 'Скрыть вопрос' %>
      <% end %>
      <%= link_to fa_icon('pencil'), edit_question_path(@question), title: 'Редактировать вопрос' %>
      <%= link_to fa_icon('list'), questions_path, title: 'Все вопросы' %>
      <%= button_to fa_icon('trash-o'), question_path(@question), method: :delete, 
      title: 'Удалить вопрос', form: {data: {turbo_confirm: 'Точно удалить вопрос?'}} %>
    </div>

    <p class="mt"><% link_to "Все вопросы", questions_path %></p>
  </div>
