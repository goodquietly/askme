  
  <div class="container">
    <h2 class="title-lg mb">Редактируем вопрос <%= @question.id %></h2>

    <% if @question.errors.any? %>
      <div class="mt">
        <% @question.errors.full_messages.each do |message| %>
          <p class="mb-sm text-red"><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <%= render 'form', question: @question %>

    <p class="mt"><%= link_to 'Вернуться', :back %></p>
  </div>
